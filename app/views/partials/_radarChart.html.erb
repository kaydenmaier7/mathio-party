<div class="radarChart"></div>

<script>
  // Set-Up
  var margin = {top: 100, right: 100, bottom: 100, left: 100},
    width = Math.min(700, window.innerWidth - 10) - margin.left - margin.right,
    height = Math.min(width, window.innerHeight - margin.top - margin.bottom - 20);

  // Data
  var data = [
        [//history
        {axis:"0",value:<%=User.find(1).percent('correct', '0times_table')%>},
        {axis:"1",value:<%=User.find(1).percent('correct', '1times_table')%>},
        {axis:"2",value:<%=User.find(1).percent('correct', '2times_table')%>},
        {axis:"3",value:<%=User.find(1).percent('correct', '3times_table')%>},
        {axis:"4",value:<%=User.find(1).percent('correct', '4times_table')%>},
        {axis:"5",value:<%=User.find(1).percent('correct', '5times_table')%>},
        {axis:"6",value:<%=User.find(1).percent('correct', '6times_table')%>},
        {axis:"7",value:<%=User.find(1).percent('correct', '7times_table')%>},
        {axis:"8",value:<%=User.find(1).percent('correct', '8times_table')%>},
        {axis:"9",value:<%=User.find(1).percent('correct', '9times_table')%>}
        ]
      ];

  // Draw the Chart
  var color = d3.scaleOrdinal()
    .range(["#EDC951","#CC333F","#00A0B0"]);

  var radarChartOptions = {
    w: width,
    h: height,
    margin: margin,
    maxValue: 0.5,
    levels: 5,
    roundStrokes: true,
    color: color
  };
  //Call function to draw the Radar chart
  RadarChart(".radarChart", data, radarChartOptions);
</script>

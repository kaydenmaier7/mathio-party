<div class="playerTwoLogin">
	<h2>Welcome Player 2! Login here...</h2>

	<div class="new_user">
		<%= form_for :player, url: players_path do |f| %>

			<div class="flash-errors">
				<%= render "partials/flash" %>
			</div>

			<p>
				<%= f.label :Email %><br>
				<%= f.text_field :email %>
			</p>

			<p>
				<%= f.label :Password %><br>
				<%= f.password_field :password %>
			</p>

			<div class="playerTwoLoginButton">
				<%= f.submit 'Login' %>
			</div>
		<% end %>
	</div>
</div>
